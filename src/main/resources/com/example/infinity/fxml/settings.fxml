<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.infinity.controller.SettingsController">

    <spacing>15</spacing>
    <alignment>CENTER</alignment>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Настройки звука" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <CheckBox fx:id="musicCheckBox" text="Включить музыку" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Громкость:"/>
        <Slider fx:id="musicVolumeSlider" min="0" max="1" blockIncrement="0.05" prefWidth="200"/>
        <Label fx:id="volumeLabel" text="75%" minWidth="40" alignment="CENTER_RIGHT"/>
    </HBox>

    <Button text="Сохранить" onAction="#onSaveClicked" prefWidth="100"/>
</VBox>